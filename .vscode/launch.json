{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend via NPM",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"            // your dev script, e.g. `nodemon server.js`
      ],
      "envFile": "${workspaceFolder}/backend/.env",
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
